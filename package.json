{
  "name": "storyhouse-vip",
  "version": "1.0.0",
  "description": "Revolutionary Web3 Storytelling Platform built on Story Protocol",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@storyhouse/frontend",
    "build": "npm run build --workspace=@storyhouse/shared && npm run build --workspace=@storyhouse/contracts && npm run build --workspace=@storyhouse/frontend",
    "start": "npm run start --workspace=@storyhouse/frontend",
    "clean": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules",
    "install:clean": "npm run clean && npm install",
    "test": "npm run test --workspace=@storyhouse/contracts",
    "test:all": "./tests/run-all-tests.sh",
    "test:integration": "node ./tests/integration/api-endpoints.test.js",
    "test:local": "./tests/scripts/test-local-services.sh",
    "test:contracts": "node ./tests/scripts/test-contracts.js",
    "test:quick": "npm run test:local && npm run test:integration",
    "test:watch": "vitest --watch",
    "prepare": "husky install",
    "lint": "npm run lint --workspace=@storyhouse/frontend",
    "type-check": "npm run type-check --workspace=@storyhouse/shared && npm run type-check --workspace=@storyhouse/frontend",
    "deploy": "cd apps/frontend && vercel --prod",
    "deploy:preview": "cd apps/frontend && vercel",
    "analyze": "npm run build && npx next-bundle-analyzer"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "typescript": "^5.8.3",
    "vitest": "^1.6.0",
    "wrangler": "^3.78.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "web3",
    "storytelling",
    "story-protocol",
    "nft",
    "ip-assets",
    "blockchain",
    "publishing"
  ],
  "author": "StoryHouse.vip Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/storyhouse-vip.git"
  }
}
