{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd ../../packages/shared && npm install && npm run build && cd ../../apps/backend && npm install && npm run build",
  "installCommand": "npm install || true",
  "env": {
    "NODE_ENV": "production"
  },
  "public": true,
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}